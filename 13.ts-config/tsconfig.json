{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build/js",  //src 파일에 생성된 ts 파일을 build에 js파일로 생성한다.
    "target": "ES6", // 기본값 es3라서 바꿔준다.
    "noEmitOnError": false, // 에러가 있더라도 js파일을 생성해준다.
    "module": "ESNext", //컴파일 맞친 후 시스템 es6 이후 버전
    "moduleResolution": "Node", // 클래식과 노드가 있는데 노드 사용
    "esModuleInterop": true, // 모듈 호환해 사용하게 해준다.
    "lib": ["ESNext", "DOM"], //컴파일 과정에서 사용하는 라이브러리 지정
    "strict": true, //타입 스크립트 파일에 타입을 엄격하게 사용한다.

    "isolatedModules": true, //전역 스크립트 파일
    "removeComments": false, // -> true 해주면 주석을 모두 제거해준다.
    "forceConsistentCasingInFileNames": false, //true하면 대소문자를 구분해줌.
  }
}